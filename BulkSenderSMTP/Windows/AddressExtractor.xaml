<Window x:Class="BulkSenderSMTP.Windows.AddressExtractor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BulkSenderSMTP.Windows"
        mc:Ignorable="d"
        Title="AddressExtractor" Height="500" Width="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="10"/>
            <RowDefinition Height="60"/>
            <RowDefinition/>
            <RowDefinition Height="10"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition />
            <ColumnDefinition Width="10"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal">
            <Label Content="Characters:" FontSize="16" VerticalAlignment="Center"/>
            <ComboBox x:Name="comboBoxChar" Width="100" Height="33" Margin="10,0,20,0"/>
            <Button Content="Extract" Width="100" Height="33" FontSize="16"/>
        </StackPanel>
        <TextBox x:Name="tBRaw" Grid.Row="2" Grid.Column="1" FontSize="14" />
    </Grid>
</Window>
